<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/version_lay"
    android:background="#f5f5f5"
    tools:context="www.fjutoj.com.fjutacmer.UpLoadAppActivity">

    <Button
        android:id="@+id/back_bt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_button_selector"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="版本更新"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorwhite"
        android:background="@color/colorblue"
        />
    <TextView
        android:background="@color/colorwhite"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="版本："
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/back_bt"
        android:textColor="@color/colorgreen"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />
    <TextView
        android:id="@+id/version_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="1.0"
        android:gravity="center_vertical"
        android:layout_below="@+id/back_bt"
        android:background="@color/colorwhite"
        android:layout_toEndOf="@+id/textView4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4"
        android:background="@color/colorwhite"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow"
            />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
        android:background="@color/colorgray"
        />
        <TextView
            android:background="@color/colorwhite"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="描述："
            android:gravity="center_vertical"
            android:textColor="@color/colorgreen"
            android:paddingLeft="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorblue"
            />
        <WebView
            android:id="@+id/version_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            >
        </WebView>

       <RelativeLayout
           android:layout_marginTop="40dp"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <Button
               android:id="@+id/version_upload"
               android:layout_width="100dp"
               android:layout_height="40dp"
               android:layout_gravity="start"
               android:layout_marginLeft="40dp"
               android:text="更新"
               android:textColor="@color/colorwhite"
               android:background="@drawable/basebutton_back_selector"
               />
           <Button
               android:id="@+id/version_finish"
               android:layout_width="100dp"
               android:layout_height="40dp"
               android:text="取消"
               android:textColor="@color/colorwhite"
               android:background="@drawable/basebutton_back_selector"
               android:layout_alignParentTop="true"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="40dp" />
       </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
