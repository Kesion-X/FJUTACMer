<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="61dp"
    android:background="@color/colorwhite"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="题号:"
            android:gravity="center"
            android:id="@+id/textView5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="1178"
            android:textColor="@color/colorgreen"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView5"
            android:id="@+id/tpid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/colorgreen"
            android:text="2"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/challenge_score" />

        <TextView
            android:id="@+id/problem_challenge_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/colorblue"
            android:text="problem_name"
            android:layout_alignTop="@+id/challenge_score"
            android:layout_toEndOf="@+id/tpid"
            android:layout_toStartOf="@+id/challenge_score"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <ImageView
            android:id="@+id/challenge_r_or_e"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/right_icon"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/tpid"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorgray"
        />

</LinearLayout>